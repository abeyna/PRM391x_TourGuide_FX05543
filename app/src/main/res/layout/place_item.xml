<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/hotel_image"
        android:layout_width="@dimen/layout_width_list"
        android:layout_height="@dimen/layout_height_list"
        android:src="@drawable/hotel"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/hotel_image"
        android:layout_centerInParent="true">
        <TextView
            android:id="@+id/place_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_name"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/place_item_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/place_item_title"/>
    </RelativeLayout>
</RelativeLayout>